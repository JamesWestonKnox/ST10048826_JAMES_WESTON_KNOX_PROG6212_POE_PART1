<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Contract_Monthly_Claim_System.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav>
            <h2>Contract Monthly Claim System</h2>
            <ul>
                <li>
                    <a asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                </li>
                @if (ViewBag.IsLoggedIn)
                {
                    
                    @if (ViewBag.UserRole == "Lecturer")
                    {
                        <li>
                            <a asp-area="" asp-controller="Claims" asp-action="UserDashboard">Lecturer Dashboard</a>
                        </li>

                        <li class="nav-item dropdown" style="">
                            <a class="nav-link dropdown-toggle" href="#" id="accountDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Account
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="accountDropdown">
                                <li>
                                    <a class="dropdown-item" asp-area="" asp-controller="UserAccount" asp-action="AccountSettings">Account Settings</a>
                                </li>
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <a class="dropdown-item" asp-area="" asp-controller="UserAccount" asp-action="Logout">Logout</a>
                                </li>
                            </ul>
                        </li>
                    }
                    else
                    {
                        <li>
                            <a asp-area="" asp-controller="Claims" asp-action="AdminDashboard">Programme Coordinator / Academic Manager Dashboard</a>
                        </li>

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="accountDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Account
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="accountDropdown">
                                <li>
                                    <a class="dropdown-item" asp-area="" asp-controller="UserAccount" asp-action="AccountSettings">Account Settings</a>
                                </li>
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <a class="dropdown-item" asp-area="" asp-controller="UserAccount" asp-action="Logout">Logout</a>
                                </li>
                            </ul>
                        </li>
                    }
                }
                else
                {
                    <li>
                        <a asp-area="" asp-controller="UserAccount" asp-action="Login">Login</a>
                    </li>
                    <li style="margin-right: auto;">
                        <a asp-area="" asp-controller="UserAccount" asp-action="Register">Register</a>
                    </li>
                }
            </ul>
        </nav>
    </header>
    <div>
        <main role="main">
            @RenderBody()
        </main>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
