@model IEnumerable<Contract_Monthly_Claim_System.Models.ClaimsModel>

@{
    ViewData["Title"] = "User Dashboard";
}

<div style="text-align:center;">
    <h1>Lecturer dashboard </h1>
    <p class="home-message">Submit new claims and upload supporting documents as well as view and track your current claims.</p>
</div>

<div class="row text-center" style="margin: 100px">
    <div class="col-md-6">
        <h2>Submit new claim</h2>

        <form asp-action="Create" method="post" class="account-form" enctype="multipart/form-data">

            <input type="text" name="ModuleCode" placeholder="Module code" required class="form-control mb-3">

            <select name="MonthOfClaim" class="form-control mb-3" required>
                <option value="" disabled selected>Select month of claim</option>
                <option value="January">January</option>
                <option value="February">February</option>
                <option value="March">March</option>
                <option value="April">April</option>
                <option value="May">May</option>
                <option value="June">June</option>
                <option value="July">July</option>
                <option value="August">August</option>
                <option value="September">September</option>
                <option value="October">October</option>
                <option value="November">November</option>
                <option value="December">December</option>
            </select>

            <input type="number" name="HoursWorked" placeholder="Hours worked" required class="form-control mb-3">
            <input type="number" name="HourlyRate" placeholder="Hourly rate" required class="form-control mb-3">
            <input type="file" name="Document" placeholder="Supporting document" class="form-control mb-3">

            <button type="submit" class="btn btn-primary" style="background-color:#1588fc">Submit claim for review</button>

        </form>
    </div>
    <div class="col-md-6">
        <h2>Track current claims</h2>

        <table class="table">
            <thead>
                <tr>
                    <th>Claim ID</th>
                    <th>Module code</th>
                    <th>Month</th>
                    <th>Hours Worked</th>
                    <th>Hourly rate</th>
                    <th>Supporting document</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Id)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ModuleCode)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.MonthOfClaim)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.HoursWorked)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.HourlyRate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.SupportingDocumentPath)
                        </td>
                    </tr>
                }
                </tbody>
            </table>

        </div>
    </div>